{
  "collectCoverage": true,
  "coverageReporters": ["text"],
  "collectCoverageFrom": ["<rootDir>/**/src/*.{js,jsx}"],
  "rootDir": "packages/",
  "moduleNameMapper": {
    "^.+\\.(css|scss|sass|svg)$": "identity-obj-proxy"
  },
  "modulePaths": ["<rootDir>"],
  "testRegex": "\\.spec\\.jsx?$",
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "setupFiles": ["../jest.setup.js"]
}
